{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "outDir": "./dist",
    "declarationDir": "dts",
    "declaration": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "jsx": "react-jsx"
  },
  "include": ["lib"],
  "exclude": ["node_modules"]
}
